package model;
// Comentarios

public class Cancion {
	//Atributos /variables -estas son las caracteristicas que tienen todos los objetos-
		//TipoDato NombreVariable [= Valor];
		String nombre; 
		String letra; // La letra completa
		int duracion; // Segundos
	//Comportamientos / metodos
		//visibilidad retorno NombreMetodo ([argumentos])
		public void mostrarLetra() {
			System.out.println("Mostrando letra de la cancion");
		}
	

}
